#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,physical_layout = &physical_layout0;
    };

    // 物理レイアウト定義
    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Key30x2";
        kscan = <&kscan0>;
        transform = <&default_transform>;

        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100    0   37       0     0     0>
            , <&key_physical_attrs 100 100  100   37       0     0     0>
            , <&key_physical_attrs 100 100  200   37       0     0     0>
            , <&key_physical_attrs 100 100  300   37       0     0     0>
            , <&key_physical_attrs 100 100  400   37       0     0     0>
            , <&key_physical_attrs 100 100  500   37       0     0     0>
            , <&key_physical_attrs 100 100  700   37       0     0     0>
            , <&key_physical_attrs 100 100  800   37       0     0     0>
            , <&key_physical_attrs 100 100  900   37       0     0     0>
            , <&key_physical_attrs 100 100 1000   37       0     0     0>
            , <&key_physical_attrs 100 100 1100   37       0     0     0>
            , <&key_physical_attrs 100 100 1200   37       0     0     0>
            , <&key_physical_attrs 100 100    0  137       0     0     0>
            , <&key_physical_attrs 100 100  100  137    0     0     0>
            , <&key_physical_attrs 100 100  200  137    0     0     0>
            , <&key_physical_attrs 100 100  300  137    0     0     0>
            , <&key_physical_attrs 100 100  400  137    0     0     0>
            , <&key_physical_attrs 100 100  500  137    0     0     0>
            , <&key_physical_attrs 100 100  700  137    0     0     0>
            , <&key_physical_attrs 100 100  800  137    0     0     0>
            , <&key_physical_attrs 100 100  900  137    0     0     0>
            , <&key_physical_attrs 100 100 1000  137    0     0     0>
            , <&key_physical_attrs 100 100 1100  137    0     0     0>
            , <&key_physical_attrs 100 100 1200  137    0     0     0>
            , <&key_physical_attrs 100 100    0  237    0     0     0>
            , <&key_physical_attrs 100 100  100  237    0     0     0>
            , <&key_physical_attrs 100 100  200  237    0     0     0>
            , <&key_physical_attrs 100 100  300  237    0     0     0>
            , <&key_physical_attrs 100 100  400  237    0     0     0>
            , <&key_physical_attrs 100 100  500  237    0     0     0>
            , <&key_physical_attrs 100 100  700  237    0     0     0>
            , <&key_physical_attrs 100 100  800  237    0     0     0>
            , <&key_physical_attrs 100 100  900  237    0     0     0>
            , <&key_physical_attrs 100 100 1000  237    0     0     0>
            , <&key_physical_attrs 100 100 1100  237    0     0     0>
            , <&key_physical_attrs 100 100 1200  237    0     0     0>
            , <&key_physical_attrs 100 100    0  337    0     0     0>
            , <&key_physical_attrs 100 100  100  337    0     0     0>
            , <&key_physical_attrs 100 100  200  337    0     0     0>
            , <&key_physical_attrs 100 100         400  337    0     0     0>
            , <&key_physical_attrs 100 100  500  337    0     0     0>
            , <&key_physical_attrs 100 100  700  337    0     0     0>
            , <&key_physical_attrs 100 100  800  337    0     0     0>
            , <&key_physical_attrs 100 100         1000  337    0     0     0>
            , <&key_physical_attrs 100 100 1100  337    0     0     0>
            , <&key_physical_attrs 100 100 1200  337    0     0     0>
        ;

    };

    // マトリックス変換定義
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)    RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)    RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)    RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)    RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)    RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
        >;
    };

    // キースキャン定義 
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        row-gpios
            = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&xiao_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};